    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "wp_child",
            "program": "${workspaceFolder}/src/lib/webpack_child_process.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "args": [
                "--local-debug-mode"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "webpack",
            "program": "${workspaceFolder}/node_modules/.bin/webpack-cli",
            "args": [
              "--config",
              "${workspaceFolder}/test/webpack.config.js"
            ],
            "autoAttachChildProcesses": true,
            "stopOnEntry": false
          }
    ]
}
